# AI Town LLM 配置文件
# 修改此文件可以快速调整 LLM 设置，无需修改代码

# ===== 主要 LLM 设置 =====

# 默认使用的 LLM 提供商 (ollama, openai, mock)
AI_TOWN_LLM_PROVIDER=ollama

# ===== Ollama 设置 =====
AI_TOWN_OLLAMA_ENABLED=true
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=deepseek-r1:1.5b
OLLAMA_TIMEOUT=60.0
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=500

# ===== OpenAI 设置 =====
# 如果有 OpenAI API Key，可以取消注释下面的行
# OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=500

# ===== Mock LLM 设置 =====
MOCK_LLM_DELAY=0.1
MOCK_LLM_RANDOM=true

# ===== 各角色的 LLM 设置 =====

# Alice (咖啡店老板)
ALICE_LLM_PROVIDER=ollama
ALICE_LLM_PLANNING=true
ALICE_LLM_CONVERSATION=true
ALICE_LLM_REFLECTION=true

# Bob (书店老板)
BOB_LLM_PROVIDER=ollama
BOB_LLM_PLANNING=true
BOB_LLM_CONVERSATION=true
BOB_LLM_REFLECTION=true

# Charlie (上班族)
CHARLIE_LLM_PROVIDER=ollama
CHARLIE_LLM_PLANNING=true
CHARLIE_LLM_CONVERSATION=true
CHARLIE_LLM_REFLECTION=true

# ===== 模拟设置 =====
AI_TOWN_TIME_MULTIPLIER=10.0
AI_TOWN_STEP_INTERVAL=1.0
AI_TOWN_MAX_AGENTS=20

# ===== 地图设置 =====
AI_TOWN_MAP_WIDTH=100
AI_TOWN_MAP_HEIGHT=100

# ===== API 设置 =====
AI_TOWN_API_HOST=0.0.0.0
AI_TOWN_API_PORT=8000
AI_TOWN_DEBUG=false

# ===== 日志设置 =====
AI_TOWN_LOG_LEVEL=INFO
AI_TOWN_FILE_LOG=true

# ===== 快速切换模型 =====
# 取消注释想要使用的模型，注释掉其他的

# 使用 DeepSeek-R1 1.5B (推荐，平衡效果和速度)
OLLAMA_MODEL=deepseek-r1:1.5b

# 使用 TinyLlama (最轻量)
# OLLAMA_MODEL=tinyllama

# 使用 DeepSeek-R1 8B (效果更好，但需要更多资源)  
# OLLAMA_MODEL=deepseek-r1:8b

# 使用其他模型
# OLLAMA_MODEL=qwen:7b-chat
# OLLAMA_MODEL=phi3.5:mini
# OLLAMA_MODEL=mistral:7b
